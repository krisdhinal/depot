<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Your Cart</h2>
  <table>
    <% @cart.line_items.each do |line_item| %>
      <tr>
        <td class="quantity"><%= line_item.quantity %></td>
        <td><%= line_item.product.title %></td>
        <td class="price"><%= number_to_currency(line_item.total_price) %></td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(@cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>

  <%# jika menggunakan button to dan dialog confirm javascript ingin keluar %>
  <%#= button_to("Empty Cart", {}, {:onclick => "return confirm('Are you sure?')", :method => :delete, :remote => true})%>
  <%= button_to 'Empty cart', @cart, :onclick => "return confirm('Are you sure?')", :method => :delete, class: "tes" %>
</article>
